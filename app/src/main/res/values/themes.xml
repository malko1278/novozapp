    <style name="Content.Image.Badge.Title" parent="Theme.NovozApp">
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Content.Main.Badge.Title" parent="Theme.NovozApp">
        <item name="android:textColor">@color/content_badge_title</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="list_divider">
        <item name="android:layout_width">fill_parent</item>listDivider
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
    </style>
    <style name="list.Divider" parent="list_divider">
        <item name="android:background">@drawable/list_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2sp</item>
    </style>
