<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp" >

    <!-- Sign up Button -->
    <ru.novozapp.fam.utils.views.font.MaterialDesignIconsTextView
        android:id="@+id/btn_hitory"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:textSize="17sp"
        android:paddingTop="14dp"
        app:typeface="robotoMedium"
        android:paddingBottom="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="@string/history_city"
        android:background="@drawable/grey_buton" />

    <!--  Sign up Button -->
    <ru.novozapp.fam.utils.views.font.MaterialDesignIconsTextView
        android:id="@+id/btn_monument"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:textSize="17sp"
        android:paddingTop="14dp"
        app:typeface="robotoMedium"
        android:paddingBottom="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="@string/monument_city"
        android:layout_alignParentRight="true"
        android:background="@drawable/grey_buton"/>

</RelativeLayout>